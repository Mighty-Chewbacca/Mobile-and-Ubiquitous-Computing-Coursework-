<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
                android:background="@drawable/bg">

    <TextView
        android:text="@string/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:id="@+id/tvGameName"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/backText"
        android:id="@+id/btnReturn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Selected User Files"
        android:id="@+id/btnResetUserFiles"
        android:layout_marginBottom="116dp"
        android:layout_above="@+id/btnReturn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User file 1"
        android:id="@+id/tbUserFile1"
        android:layout_above="@+id/btnResetUserFiles"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textOn="Selected"
        android:textOff="un-selected"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User file 1"
        android:id="@+id/tbUserFile2"
        android:layout_alignTop="@+id/tbUserFile1"
        android:layout_centerHorizontal="true"
        android:textOff="un-selected"
        android:textOn="selected"/>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User file 1"
        android:id="@+id/tbUserFile3"
        android:layout_alignTop="@+id/tbUserFile2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textOff="un-selected"
        android:textOn="selected"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset LeaderBoards"
        android:id="@+id/btnResetLeaderBoards"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/tvGameName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user File 1"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_above="@+id/tbUserFile1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user File 3"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_above="@+id/tbUserFile3"
        android:layout_alignLeft="@+id/tbUserFile3"
        android:layout_alignStart="@+id/tbUserFile3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user File 2"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:layout_above="@+id/tbUserFile2"
        android:layout_alignLeft="@+id/tbUserFile2"
        android:layout_alignStart="@+id/tbUserFile2"/>

</RelativeLayout>